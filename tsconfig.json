{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "module": "esnext",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}